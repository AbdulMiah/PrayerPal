<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DuaFragment">

    <TextView
        android:id="@+id/dua_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/dua_nav_title"
        android:textSize="@dimen/current_prayer_txt_size"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/dua_title_sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_view_margin_edge"
        android:layout_marginBottom="@dimen/list_view_margin_edge"
        android:background="@drawable/search_background"
        android:iconifiedByDefault="false"
        android:queryHint="@string/sv_dua_hint"
        app:layout_constraintBottom_toTopOf="@+id/dua_lv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dua_fragment_title" />

    <ListView
        android:id="@+id/dua_lv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dua_lv_height"
        android:layout_marginStart="@dimen/list_view_margin_edge"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginEnd="@dimen/list_view_margin_edge"
        android:layout_marginBottom="@dimen/lv_margin_bottom"
        android:divider="@color/transparent"
        android:dividerHeight="@dimen/lv_divider_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dua_title_sv" />

</androidx.constraintlayout.widget.ConstraintLayout>