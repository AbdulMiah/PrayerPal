<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mobdevportfolio" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amazon_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/almost_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aquamarine</item>
        <item name="colorSecondaryVariant">@color/ocean_green</item>
        <item name="colorOnSecondary">@color/yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/comfortaa</item>
    </style>
</resources>